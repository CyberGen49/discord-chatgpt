{
    "$schema": "./config-schema.json",
    "openai": {
        "secret": "",
        "model": "gpt-4-turbo"
    },
    "discord": {
        "id": "",
        "token": "",
        "owner_id": "",
        "status": {
            "type": "Listening",
            "text": "you"
        },
        "allowed_bots": []
    },
    "starter_messages": [
        {
            "role": "system",
            "content": "Current time: {time}. Current date: {date}. Timezone: {timezone}."
        }, {
            "role": "system",
            "content": "You are a Discord bot named {bot_username}. Make your responses as concise as possible. The person you're chatting with calls themselves \"{user_nickname}\"."
        }
    ],
    "max_input_tokens": 512,
    "max_output_tokens": 512,
    "usd_per_token": 0.00001,
    "delete_message_days": 0,
    "public_usage": false,
    "ignore_prefixes": [
        "!", "/"
    ],
    "show_regenerate_button": false,
    "request_timeout": 45,
    "request_tries": 3,
    "http_server": {
        "enabled": false,
        "port": 8080,
        "hostname": "localhost",
        "secure": false
    }
}